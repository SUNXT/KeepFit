<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.sun.keepfit.View.SigninActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/relativeLayout5"
        android:background="@color/theme_blue"
        android:layout_alignParentEnd="true">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="注册"
            android:id="@+id/textView11"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton_signin_go_back"
            android:src="@mipmap/back"
            android:background="@color/theme_blue"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <!--android:background="@android:color/transparent"-->

    </RelativeLayout>
    <RelativeLayout tools:context="com.example.sun.keepfit.View.LoginActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/button_signin"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/editText_password"
            android:layout_alignStart="@+id/editText_code" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_phone_num"
            android:layout_below="@+id/textView37"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:hint="输入11位手机号" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_password"
            android:layout_below="@+id/editText_phone_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:hint="输入6~20 位密码"
            android:password="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="注册账号"
            android:id="@+id/textView37"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="点此登录"
            android:id="@+id/textView_login"
            android:textColor="@color/theme_blue"
            android:layout_alignTop="@+id/textView39"
            android:layout_toStartOf="@+id/textView_send_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="已是KeepFit用户？"
            android:id="@+id/textView39"
            android:layout_marginTop="41dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/button_signin"
            android:layout_toStartOf="@+id/textView_login" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_code"
            android:layout_below="@+id/editText_password"
            android:layout_alignStart="@+id/editText_password"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:hint="输入验证码"
            android:layout_toStartOf="@+id/textView_send_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:id="@+id/textView_send_code"
            android:layout_alignTop="@+id/editText_code"
            android:layout_alignEnd="@+id/editText_password"
            android:textColor="@color/theme_blue" />

    </RelativeLayout>
</RelativeLayout>
