<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/train_1"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="课程标题"
            android:textColor="@color/white"
            android:id="@+id/textView_course_title"
            android:layout_marginStart="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="第1/3节"
            android:textColor="@color/white"
            android:id="@+id/textView_course_time"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView_course_title"
            android:layout_marginBottom="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4分钟，32千卡"
            android:textColor="@color/white"
            android:id="@+id/textView_course_detail"
            android:layout_alignTop="@+id/textView_course_time"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp" />

    </RelativeLayout>

</RelativeLayout>