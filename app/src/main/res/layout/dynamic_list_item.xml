<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout14"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout13"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView_dynamic_item_user_icon"
                android:src="@drawable/head_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="用户名"
                android:id="@+id/textView_dynamic_item_user_name"
                android:layout_marginStart="19dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView_dynamic_item_user_icon" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="我要上精选！"
            android:id="@+id/textView_dynamic_item_detail"
            android:layout_below="@+id/relativeLayout13"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView_dynamic_item_photo"
            android:layout_below="@+id/textView_dynamic_item_detail"
            android:layout_alignParentStart="true"
            android:src="@drawable/choiceness_0"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2017/01/02 10;00"
            android:id="@+id/textView_dynamic_item_create_time"
            android:textIsSelectable="false"
            android:textSize="10dp"
            android:layout_below="@+id/imageView_dynamic_item_photo"
            android:layout_alignEnd="@+id/textView_dynamic_item_detail"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageButton_dynamic_item_thumb"
            android:layout_alignBottom="@+id/textView_dynamic_item_create_time"
            android:layout_alignEnd="@+id/imageView_dynamic_item_photo"
            android:background="@mipmap/thumbs_o_up"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

</LinearLayout>