<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshlayout">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:background="@color/light_gray">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:id="@+id/relativeLayout4">

                    <android.support.v4.view.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f123ff"
                        android:id="@+id/viewpager_choiceness"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true">
                    </android.support.v4.view.ViewPager>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/doLayout_choinceness"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true">
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_showChooseCourses"
                    android:layout_below="@+id/relativeLayout4">

                    <GridView
                        android:id="@+id/gridView_show_choiceness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:numColumns="2"
                        android:background="@color/white"
                        android:layout_below="@+id/textView17">
                    </GridView>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/linearLayout4"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/abc">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/imageView8"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/run_logo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="一起来跑步"
                                android:id="@+id/textView13"
                                android:layout_below="@+id/imageView8"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/abc1">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/imageView12"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/bicycle_logo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="骑行看世界"
                                android:id="@+id/textView14"
                                android:layout_below="@+id/imageView12"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/abc2">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/imageView13"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/hiking_logo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="爬山看风景"
                                android:id="@+id/textView16"
                                android:layout_below="@+id/imageView13"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="    精选动态"
                        android:textSize="14dp"
                        android:background="@color/white"
                        android:id="@+id/textView17"
                        android:layout_below="@+id/linearLayout4"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical" />

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>